{
  "name": "cavea-server",
  "version": "0.0.1",
  "description": "cavea-team/server",
  "scripts": {
    "start-dev": "nodemon --watch src/ src/index.ts",
    "start": "node dist/index.js",
    "build": "rm -rf dist && tsc",
    "test": "jest --verbose",
    "lint": "eslint src/**/*.{js,ts,tsx} --no-error-on-unmatched-pattern --quiet --fix",
    "prettier": "prettier --write src/**/*.{js,ts,tsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cavea-team/server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cavea-team/server/issues"
  },
  "homepage": "https://github.com/cavea-team/server#readme",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.1",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "apollo-server-types": "^0.2.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "jest-cli": "^25.2.4",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.5.3",
    "winston": "^3.2.1"
  },
  "dependencies": {
    "@apollo/federation": "^0.10.0",
    "@types/node-fetch": "^2.5.5",
    "apollo-datasource-rest": "^0.6.1",
    "apollo-server": "^2.8.1",
    "apollo-server-env": "^2.4.3",
    "apollo-server-plugin-operation-registry": "^0.2.2",
    "dotenv": "^8.2.0",
    "graphql": "^14.4.2",
    "json-stringify-safe": "^5.0.1",
    "moment": "^2.24.0",
    "nodemon": "^2.0.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "engine": {
    "node": "12.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  }
}
